{
  "name": "apple-reminders-mcp",
  "description": "MCP server for Apple Reminders on macOS",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build": "swift build -c release",
    "build:debug": "swift build",
    "run": ".build/release/apple-reminders-mcp",
    "test": "bun test",
    "test:cleanup": "bun test/cleanup-test-lists.ts",
    "prettier-check": "prettier --check .",
    "prettier": "prettier --write .",
    "prettier:write:file": "prettier --write --ignore-unknown",
    "signal": "bun run prettier-check",
    "prepare": "husky"
  },
  "devDependencies": {
    "@types/node": "25.0.3",
    "bun-types": "1.3.5",
    "husky": "9.1.7",
    "lint-staged": "^14.0.1",
    "prettier": "3.6.2"
  },
  "lint-staged": {
    "**/*": "prettier --check --ignore-unknown"
  },
  "trustedDependencies": [
    "@justinhaaheim/version-manager"
  ]
}
