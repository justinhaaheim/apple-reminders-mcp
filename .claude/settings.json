{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "permissions": {
    "allow": [
      "Bash(cat:*)",
      "Bash(cp:*)",
      // "Bash(find:*)",
      "Bash(grep:*)",
      "Bash(head:*)",
      "Bash(ls:*)",
      "Bash(mkdir:*)",
      // "Bash(chmod:*)",
      "Bash(unzip:*)",

      // "// Git Commands",
      "Bash(git add:*)",
      "Bash(git commit:*)",
      "Bash(git fetch:*)",
      "Bash(git log:*)",
      "Bash(git rebase:*)",
      "Bash(git show:*)",
      "Bash(git status:*)",

      // "// Bun Commands",
      "Bash(bun install:*)",
      "Bash(bun list:*)",
      "Bash(bun run:*)",
      "Bash(bun add:*)",
      "Bash(bun remove:*)",
      "Bash(bun pm:*)",

      // "// Code Quality",
      "Bash(npx eslint:*)",
      "Bash(npx prettier:*)",
      "Bash(npx tsc:*)",

      // "// GitHub CLI",
      // "Bash(gh api:*)",

      // "// IDE Tools",
      "mcp__ide__getDiagnostics",

      // "// Web Access",
      "WebSearch",
      "WebFetch(domain:github.com)"
    ],
    "deny": [],
    "defaultMode": "acceptEdits"
  },
  "sandbox": {
    "enabled": true
    // "autoAllowBashIfSandboxed": false
  },

  "hooks": {
    "Notification": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "terminal-notifier -title \"Claude Code - $(basename \"$PWD\")\" -subtitle \"Input Required\" -message \"Claude is waiting for your input\" -sound default"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Edit|MultiEdit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "jq -r '.tool_input.file_path' | { read file_path; bun run prettier:write:file -- \"$file_path\"; }"
          }
        ]
      }
    ]
  }
}
